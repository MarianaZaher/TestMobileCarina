{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run All Cucumber Tests",
            "type": "shell",
            "command": "mvn",
            "args": ["clean", "test"],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Run Cucumber Tests (tagged @api)",
            "type": "shell",
            "command": "mvn",
            "args": ["test", "-Dcucumber.filter.tags=@api"],
            "group": "test",
            "problemMatcher": []
        },
        {
            "label": "Run Cucumber Tests (tagged @regression)",
            "type": "shell",
            "command": "mvn",
            "args": ["test", "-Dcucumber.filter.tags=@regression"],
            "group": "test",
            "problemMatcher": []
        }
    ]
}
